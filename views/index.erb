<div class="container row">
	<div class="col-md-3"></div>
		<div class="col-md-6">
			<div class="container-fluid">		
				<% if @growl_directory.empty? %>
					
					<h4>No Growls posted yet</h4>

				<% else %>
				
					<ul id="growl-list">
					<% @growl_directory.each do |growl| %>
						<li><%= growl %></li>
					<% end %>
					</ul>

				<% end %>
				</div>	
			</div>	
		<div class="col-md-3"></div>
	</div>	
</div>